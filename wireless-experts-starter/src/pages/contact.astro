---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact Us" 
  description="Get in touch with Pragmatic Communications Systems. Request a quote, technical support, or general inquiries."
>
  <!-- Hero -->
  <section class="bg-primary text-white py-16">
    <div class="container-default">
      <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl text-gray-200 max-w-2xl">
        Have a question or need a quote? We're here to help. Reach out to our team 
        and we'll respond within 24 hours.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section-padding">
    <div class="container-default">
      <div class="grid lg:grid-cols-2 gap-12">
        
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-semibold mb-6">Send Us a Message</h2>
          
          <form 
            name="contact" 
            method="POST" 
            data-netlify="true"
            data-netlify-honeypot="bot-field"
            action="/contact/success"
            class="space-y-6"
          >
            <!-- Honeypot field for spam protection -->
            <p class="hidden">
              <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            </p>
            <input type="hidden" name="form-name" value="contact" />
            
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="label">Full Name *</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required 
                  class="input"
                  placeholder="John Smith"
                />
              </div>
              <div>
                <label for="company" class="label">Company *</label>
                <input 
                  type="text" 
                  id="company" 
                  name="company" 
                  required 
                  class="input"
                  placeholder="Acme Corporation"
                />
              </div>
            </div>
            
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="email" class="label">Email Address *</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required 
                  class="input"
                  placeholder="john@company.com"
                />
              </div>
              <div>
                <label for="phone" class="label">Phone Number</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  class="input"
                  placeholder="(555) 123-4567"
                />
              </div>
            </div>
            
            <div>
              <label for="interest" class="label">Product Interest</label>
              <select id="interest" name="interest" class="input">
                <option value="">Select a product category...</option>
                <option value="directional-speakers">Directional Speakers (PADS™)</option>
                <option value="pa-systems">PA Systems</option>
                <option value="audio-distribution">Audio Distribution</option>
                <option value="healthcare">Healthcare Solutions</option>
                <option value="custom">Custom Solution</option>
                <option value="other">Other / General Inquiry</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="label">Message *</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required 
                class="input resize-none"
                placeholder="Tell us about your project or question..."
              ></textarea>
            </div>
            
            <div class="flex items-center justify-between">
              <p class="text-sm text-gray-500">
                * Required fields
              </p>
              <button type="submit" class="btn-primary">
                Send Message →
              </button>
            </div>
            
            <p class="text-sm text-gray-500 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              We respect your privacy and never share your information.
            </p>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-semibold mb-6">Get in Touch</h2>
          
          <!-- Contact Cards -->
          <div class="space-y-6 mb-8">
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-2">Corporate Headquarters</h3>
                  <address class="text-gray-600 not-italic">
                    Pragmatic Communications Systems, Inc.<br>
                    2340A Walsh Avenue<br>
                    Santa Clara, CA 95051
                  </address>
                </div>
              </div>
            </div>

            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-2">Phone</h3>
                  <p class="text-gray-600">
                    <a href="tel:+14087481100" class="text-primary hover:underline">
                      408-748-1100
                    </a>
                  </p>
                  <p class="text-sm text-gray-500 mt-1">
                    Monday - Friday, 8am - 5pm PST
                  </p>
                </div>
              </div>
            </div>

            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-2">Email</h3>
                  <p class="text-gray-600">
                    Sales: <a href="mailto:sales@pragmatic1.com" class="text-primary hover:underline">sales@pragmatic1.com</a>
                  </p>
                  <p class="text-gray-600">
                    Support: <a href="mailto:support@pragmatic1.com" class="text-primary hover:underline">support@pragmatic1.com</a>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Response Time -->
          <div class="bg-secondary/10 border border-secondary/20 rounded-lg p-6">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-secondary/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-secondary-dark mb-2">Fast Response Guarantee</h3>
                <p class="text-gray-600 text-sm">
                  We respond to all inquiries within 24 business hours. For urgent matters,
                  please call us directly.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-gray-100 py-12">
    <div class="container-default">
      <div class="rounded-lg overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3170.5!2d-121.9653!3d37.3875!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fc9!2s2340%20Walsh%20Ave%2C%20Santa%20Clara%2C%20CA%2095051!5e0!3m2!1sen!2sus!4v1234567890"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Pragmatic Communications Location"
          class="w-full"
        ></iframe>
      </div>
      <div class="mt-4 text-center">
        <a
          href="https://www.google.com/maps/dir//2340+Walsh+Ave,+Santa+Clara,+CA+95051"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-primary hover:text-primary-light font-medium"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Get Directions
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
