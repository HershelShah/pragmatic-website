<BaseLayout
  title="Downloads"
  description="Download product manuals, datasheets, and specifications for Pragmatic Communications products."
>
  <!-- Hero -->
  <section class="bg-primary text-white py-16">
    <div class="container-default">
      <h1 class="text-4xl font-bold mb-4">Product Downloads</h1>
      <p class="text-xl text-gray-200 max-w-2xl">
        Access technical documentation, datasheets, manuals, and specifications for all Pragmatic products.
      </p>
    </div>
  </section>

  <!-- Downloads Section -->
  <section class="section-padding">
    <div class="container-default">

      <!-- Notice -->
      <div class="bg-secondary/10 border border-secondary/20 rounded-lg p-6 mb-12 max-w-3xl mx-auto">
        <h3 class="font-semibold text-secondary-dark mb-2 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
          Need a document not listed?
        </h3>
        <p class="text-gray-600 text-sm">
          Can't find the documentation you need? <a href="/contact" class="text-primary hover:underline font-medium">Contact us</a> and we'll provide the specific information you're looking for.
        </p>
      </div>

      <!-- Download Categories -->
      <div class="space-y-12 max-w-4xl mx-auto">
        {downloads.map((category) => (
          <div>
            <h2 class="text-2xl font-bold mb-6 pb-3 border-b-2 border-primary/20">
              {category.category}
            </h2>
            <div class="grid gap-4">
              {category.items.map((item) => (
                <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center flex-1">
                      <div class="w-12 h-12 bg-primary/10 rounded flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                        </svg>
                      </div>
                      <div class="ml-4 flex-1">
                        <h4 class="font-semibold text-gray-900">{item.name}</h4>
                        <p class="text-sm text-gray-500">
                          {item.type} • {item.size}
                        </p>
                      </div>
                    </div>
                    <a
                      href={item.file}
                      class="ml-4 inline-flex items-center px-4 py-2 bg-primary hover:bg-primary-light text-white text-sm font-medium rounded-lg transition-colors"
                      download
                    >
                      <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                      </svg>
                      Download
                    </a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Additional Resources -->
      <div class="mt-16 bg-gray-50 rounded-2xl p-8 md:p-12 max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-6">Additional Resources</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-semibold mb-2">Technical Support</h3>
            <p class="text-gray-600 text-sm mb-3">
              Need help with installation or troubleshooting? Our technical team is here to assist.
            </p>
            <a href="/contact" class="text-primary hover:underline text-sm font-medium">
              Contact Technical Support →
            </a>
          </div>
          <div>
            <h3 class="font-semibold mb-2">Custom Documentation</h3>
            <p class="text-gray-600 text-sm mb-3">
              Need specifications for a custom configuration? We can provide tailored documentation.
            </p>
            <a href="/quote" class="text-primary hover:underline text-sm font-medium">
              Request Custom Documentation →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
