---
import BaseLayout from '../../layouts/BaseLayout.astro';

const industries = [
  {
    name: 'Government & Defense',
    href: '/industries/government',
    description: 'Federal, defense, and municipal audio solutions with security clearance capability',
    iconPath: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4'
  },
  {
    name: 'Healthcare',
    href: '/industries/healthcare',
    description: 'Patient entertainment and clinical audio systems for medical facilities',
    iconPath: 'M19 21l-7-5-7 5V5a2 2 0 012-2h10a2 2 0 012 2v16zM12 7v6m-3-3h6'
  },
  {
    name: 'Education',
    href: '/industries/education',
    description: 'Campus-wide paging, classroom audio, and event systems',
    iconPath: 'M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222'
  },
  {
    name: 'Corporate',
    href: '/industries/corporate',
    description: 'Conference rooms, lobby audio, and facility-wide communications',
    iconPath: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
  },
  {
    name: 'Hospitality',
    href: '/industries/hospitality',
    description: 'Guest experience enhancement through targeted audio delivery',
    iconPath: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6'
  },
  {
    name: 'Houses of Worship',
    href: '/industries/houses-of-worship',
    description: 'Sound reinforcement and distributed audio for worship spaces',
    iconPath: 'M3 21h18M5 21V7l7-4 7 4v14M9 21v-6h6v6M9 10h.01M15 10h.01M12 14h.01'
  },
  {
    name: 'Cultural & Events',
    href: '/industries/events',
    description: 'Museums, galleries, theaters, and event venues',
    iconPath: 'M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z'
  },
  {
    name: 'Residential',
    href: '/industries/residential',
    description: 'High-end home theater and distributed audio systems',
    iconPath: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6'
  },
];
---

<BaseLayout
  title="Industries We Serve"
  description="Pragmatic Communications provides audio solutions for government, healthcare, education, corporate, hospitality, and more."
>
  <section class="bg-primary text-white py-20">
    <div class="container-default">
      <h1 class="text-5xl font-bold mb-6">Industries We Serve</h1>
      <p class="text-xl text-gray-200 max-w-3xl">
        For over 30 years, we've provided professional audio solutions to the most demanding
        environments across multiple industries. From NASA research facilities to major
        healthcare systems, our technology is trusted where performance matters most.
      </p>
    </div>
  </section>

  <section class="section-padding">
    <div class="container-default">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {industries.map((industry) => (
          <a href={industry.href} class="card group">
            <div class="card-body text-center">
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary/20 transition-colors">
                <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={industry.iconPath} />
                </svg>
              </div>
              <h3 class="text-lg font-semibold mb-2 group-hover:text-primary transition-colors">
                {industry.name}
              </h3>
              <p class="text-gray-600 text-sm">
                {industry.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-gray-50 section-padding">
    <div class="container-default">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Trusted by Leading Organizations</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
          <div class="text-gray-600 font-semibold">NASA</div>
          <div class="text-gray-600 font-semibold">US Coast Guard</div>
          <div class="text-gray-600 font-semibold">Kaiser Permanente</div>
          <div class="text-gray-600 font-semibold">Smithsonian</div>
        </div>
        <p class="text-gray-600 mb-8">
          Whether you're a government agency, healthcare facility, educational institution, or
          private business, we have the expertise to deliver the perfect audio solution.
        </p>
        <a href="/quote" class="btn-primary">Discuss Your Project</a>
      </div>
    </div>
  </section>
</BaseLayout>
