---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Houses of Worship Audio" description="Sound reinforcement and distributed audio for churches, temples, and worship spaces.">
  <section class="bg-primary text-white py-20">
    <div class="container-default">
      <div class="flex items-center mb-4">
        <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mr-4">
          <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 21h18M5 21V7l7-4 7 4v14M9 21v-6h6v6M9 10h.01M15 10h.01M12 14h.01" />
          </svg>
        </div>
        <h1 class="text-5xl font-bold">Houses of Worship</h1>
      </div>
      <p class="text-xl text-gray-200 max-w-3xl">
        Clear, intelligible audio for every seat. Sound reinforcement and distributed audio systems for worship spaces of all sizes.
      </p>
    </div>
  </section>
  <section class="section-padding">
    <div class="container-default text-center">
      <h2 class="text-3xl font-bold mb-6">Audio Solutions for Worship Spaces</h2>
      <p class="text-gray-600 mb-8 max-w-2xl mx-auto">From small chapels to large sanctuaries, we deliver clear, intelligible audio.</p>
      <a href="/quote" class="btn-primary">Request a Quote</a>
    </div>
  </section>
</BaseLayout>
