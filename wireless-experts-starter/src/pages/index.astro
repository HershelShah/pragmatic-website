---
import BaseLayout from '../layouts/BaseLayout.astro';

const industries = [
  { name: 'Government', href: '/industries/government', image: '/images/industries/government.jpg', description: 'Defense, federal & municipal solutions' },
  { name: 'Healthcare', href: '/industries/healthcare', image: '/images/industries/healthcare.jpg', description: 'Patient entertainment & clinical audio' },
  { name: 'Education', href: '/industries/education', image: '/images/industries/education.jpg', description: 'Campus-wide audio systems' },
  { name: 'Corporate', href: '/industries/corporate', image: '/images/industries/corporate.jpg', description: 'Conference & office solutions' },
  { name: 'Hospitality', href: '/industries/hospitality', image: '/images/industries/hospitality.jpg', description: 'Guest experience enhancement' },
  { name: 'Houses of Worship', href: '/industries/houses-of-worship', image: '/images/industries/houses-of-worship.jpg', description: 'Clear audio for every seat' },
  { name: 'Cultural & Events', href: '/industries/events', image: '/images/industries/events.jpg', description: 'Museums, galleries & venues' },
  { name: 'Residential', href: '/industries/residential', image: '/images/industries/residential.jpg', description: 'High-end home installations' },
];

const features = [
  {
    title: 'Silicon Valley Engineering',
    description: 'Designed and engineered in the heart of innovation, with roots tracing back to NASA research partnerships.',
    iconPath: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z'
  },
  {
    title: 'Made in USA',
    description: 'Manufactured locally in Santa Clara County by ISO 9001 certified partners, ensuring quality and rapid delivery.',
    iconPath: 'M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9'
  },
  {
    title: 'Custom Solutions',
    description: 'Every installation is unique. We work with you to deliver tailored solutions that meet your specific requirements.',
    iconPath: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z'
  }
];
---

<BaseLayout title="Professional Audio Solutions">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary to-primary-dark text-white overflow-hidden">
    <div class="absolute inset-0 bg-[url('/images/hero-pattern.svg')] opacity-10"></div>
    <div class="container-default section-padding relative">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          Professional Audio Solutions for Every Environment
        </h1>
        <p class="text-xl text-gray-200 mb-8 leading-relaxed">
          From NASA research projects to healthcare facilities worldwide, we've been engineering 
          precision audio and video solutions for over 30 years.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/products" class="btn-primary">
            View Products
          </a>
          <a href="/quote" class="btn-outline-white">
            Get a Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <section class="bg-gray-50 py-6 border-b border-gray-200">
    <div class="container-default">
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 text-center">
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="font-semibold text-gray-700">30+ Years</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="font-semibold text-gray-700">NASA Technology Partner</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
          </svg>
          <span class="font-semibold text-gray-700">Made in USA</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
          <span class="font-semibold text-gray-700">ISO 9001 Certified</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section class="section-padding">
    <div class="container-default">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="mb-4">Our Solutions</h2>
        <p class="text-gray-600 text-lg">
          Precision-engineered audio and video products designed for demanding professional environments.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Product Card: Directional Speakers -->
        <a href="/products/directional-speakers" class="card group">
          <div class="aspect-video bg-gray-100 flex items-center justify-center overflow-hidden">
            <img src="/images/products/directional-speakers/pads-gold.jpg" alt="PADS Directional Speaker" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
          </div>
          <div class="card-body">
            <span class="badge badge-primary mb-2">PADS™ Technology</span>
            <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
              Directional Speakers
            </h3>
            <p class="text-gray-600 text-sm">
              Focused audio that's heard only where you want it. Perfect for museums, retail, and healthcare.
            </p>
          </div>
        </a>

        <!-- Product Card: PA Systems -->
        <a href="/products/pa-systems" class="card group">
          <div class="aspect-video bg-gray-100 flex items-center justify-center overflow-hidden">
            <img src="/images/products/pa-systems/pts-4077f.png" alt="PTS-4077F PA System" class="w-full h-full object-contain p-4 group-hover:scale-105 transition-transform duration-300" />
          </div>
          <div class="card-body">
            <span class="badge badge-secondary mb-2">Professional Grade</span>
            <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
              PA Systems
            </h3>
            <p class="text-gray-600 text-sm">
              Commercial paging and announcement systems for facilities of any size.
            </p>
          </div>
        </a>

        <!-- Product Card: Audio Distribution -->
        <a href="/products/audio-distribution" class="card group">
          <div class="aspect-video bg-gray-100 flex items-center justify-center overflow-hidden">
            <img src="/images/products/audio-distribution/cats-mx4.png" alt="CATS Audio Distribution" class="w-full h-full object-contain p-4 group-hover:scale-105 transition-transform duration-300" />
          </div>
          <div class="card-body">
            <span class="badge badge-primary mb-2">CATS™ Technology</span>
            <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
              Audio Distribution
            </h3>
            <p class="text-gray-600 text-sm">
              Distribute audio over standard Cat5 cables up to 300ft with perfect clarity.
            </p>
          </div>
        </a>

        <!-- Product Card: Healthcare -->
        <a href="/products/healthcare" class="card group">
          <div class="aspect-video bg-gray-100 flex items-center justify-center overflow-hidden">
            <img src="/images/products/healthcare/hc-24.png" alt="Healthcare Solutions" class="w-full h-full object-contain p-4 group-hover:scale-105 transition-transform duration-300" />
          </div>
          <div class="card-body">
            <span class="badge badge-secondary mb-2">Patient-Focused</span>
            <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
              Healthcare Solutions
            </h3>
            <p class="text-gray-600 text-sm">
              Patient entertainment and clinical audio systems designed for medical environments.
            </p>
          </div>
        </a>
      </div>
      
      <div class="text-center mt-10">
        <a href="/products" class="btn-secondary">
          View All Products →
        </a>
      </div>
    </div>
  </section>

  <!-- Industries Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-default">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="mb-4">Industries We Serve</h2>
        <p class="text-gray-600 text-lg">
          From government facilities to houses of worship, our solutions are trusted 
          in the most demanding environments.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {industries.map((industry) => (
          <a href={industry.href} class="bg-white rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border border-gray-100 group">
            <div class="aspect-video overflow-hidden">
              <img src={industry.image} alt={industry.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
            </div>
            <div class="p-4">
              <h3 class="font-semibold text-gray-900 group-hover:text-primary transition-colors mb-1">
                {industry.name}
              </h3>
              <p class="text-sm text-gray-500">{industry.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Trusted By Section -->
  <section class="section-padding bg-white border-t border-gray-100">
    <div class="container-default">
      <div class="text-center mb-10">
        <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Trusted By Industry Leaders</p>
        <h2 class="text-2xl font-bold text-gray-900">Serving America's Most Demanding Organizations</h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center justify-items-center">
        <!-- US Air Force -->
        <div class="flex flex-col items-center justify-center p-4 grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100">
          <svg class="w-12 h-12 text-gray-600 mb-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
          <span class="text-sm font-semibold text-gray-700 text-center">US Air Force</span>
        </div>

        <!-- US Coast Guard -->
        <div class="flex flex-col items-center justify-center p-4 grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100">
          <svg class="w-12 h-12 text-gray-600 mb-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
          </svg>
          <span class="text-sm font-semibold text-gray-700 text-center">US Coast Guard</span>
        </div>

        <!-- NASA -->
        <div class="flex flex-col items-center justify-center p-4 grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100">
          <svg class="w-12 h-12 text-gray-600 mb-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2a10 10 0 1010 10A10 10 0 0012 2zm0 18a8 8 0 118-8 8 8 0 01-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
          </svg>
          <span class="text-sm font-semibold text-gray-700 text-center">NASA Ames</span>
        </div>

        <!-- Smithsonian -->
        <div class="flex flex-col items-center justify-center p-4 grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100">
          <svg class="w-12 h-12 text-gray-600 mb-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 3L1 9l4 2.18v6L12 21l7-3.82v-6l2-1.09V17h2V9L12 3zm6.82 6L12 12.72 5.18 9 12 5.28 18.82 9zM17 15.99l-5 2.73-5-2.73v-3.72L12 15l5-2.73v3.72z"/>
          </svg>
          <span class="text-sm font-semibold text-gray-700 text-center">Smithsonian</span>
        </div>

        <!-- Kaiser Permanente -->
        <div class="flex flex-col items-center justify-center p-4 grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100">
          <svg class="w-12 h-12 text-gray-600 mb-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-1.99.9-1.99 2L3 19c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-1 11h-4v4h-4v-4H6v-4h4V6h4v4h4v4z"/>
          </svg>
          <span class="text-sm font-semibold text-gray-700 text-center">Kaiser Permanente</span>
        </div>

        <!-- Fortune 500 -->
        <div class="flex flex-col items-center justify-center p-4 grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100">
          <svg class="w-12 h-12 text-gray-600 mb-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"/>
          </svg>
          <span class="text-sm font-semibold text-gray-700 text-center">Fortune 500</span>
        </div>
      </div>

      <div class="text-center mt-10">
        <p class="text-gray-500 text-sm">
          Trusted by government agencies, healthcare systems, and leading institutions since 1986
        </p>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="section-padding">
    <div class="container-default">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="mb-4">Why Choose Pragmatic?</h2>
        <p class="text-gray-600 text-lg">
          Three decades of engineering excellence, rooted in Silicon Valley innovation.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-primary/10 rounded-full mb-4">
              <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.iconPath} />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-br from-secondary to-secondary-dark text-white section-padding">
    <div class="container-default text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Discuss Your Project?
      </h2>
      <p class="text-xl text-gray-100 mb-8 max-w-2xl mx-auto">
        Whether you need a single directional speaker or a complete facility-wide audio system, 
        our team is ready to help design the perfect solution.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/quote" class="btn-primary bg-white text-secondary hover:bg-gray-100">
          Request a Quote
        </a>
        <a href="/contact" class="btn-outline-white">
          Contact Us
        </a>
      </div>
      <p class="mt-6 text-sm text-gray-200 flex items-center justify-center gap-2">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Or call us directly: <a href="tel:+14087481100" class="underline hover:no-underline">408-748-1100</a>
      </p>
    </div>
  </section>
</BaseLayout>
