---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Request a Quote"
  description="Get a custom quote for your audio/video project. Our team will respond within 24 hours with pricing and recommendations."
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary to-primary-dark text-white py-16">
    <div class="container-default">
      <h1 class="text-4xl font-bold mb-4">Request a Quote</h1>
      <p class="text-xl text-gray-200 max-w-2xl">
        Tell us about your project and we'll provide a custom quote with product
        recommendations tailored to your specific needs.
      </p>
    </div>
  </section>

  <!-- Quote Form Section -->
  <section class="section-padding">
    <div class="container-default">
      <div class="max-w-3xl mx-auto">

        <!-- Benefits Banner -->
        <div class="grid md:grid-cols-3 gap-4 mb-12">
          <div class="bg-secondary/10 rounded-lg p-6 text-center">
            <div class="w-12 h-12 bg-secondary/20 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-secondary-dark mb-1">24-Hour Response</h3>
            <p class="text-sm text-gray-600">We respond to all quotes within one business day</p>
          </div>
          <div class="bg-secondary/10 rounded-lg p-6 text-center">
            <div class="w-12 h-12 bg-secondary/20 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-secondary-dark mb-1">Competitive Pricing</h3>
            <p class="text-sm text-gray-600">Direct from manufacturer pricing, no middlemen</p>
          </div>
          <div class="bg-secondary/10 rounded-lg p-6 text-center">
            <div class="w-12 h-12 bg-secondary/20 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
              </svg>
            </div>
            <h3 class="font-semibold text-secondary-dark mb-1">Custom Solutions</h3>
            <p class="text-sm text-gray-600">Tailored recommendations for your requirements</p>
          </div>
        </div>

        <!-- Quote Form -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
          <h2 class="text-2xl font-semibold mb-6">Project Information</h2>

          <form
            name="quote"
            method="POST"
            data-netlify="true"
            data-netlify-honeypot="bot-field"
            action="/contact/success"
            class="space-y-6"
          >
            <!-- Honeypot field -->
            <p class="hidden">
              <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            </p>
            <input type="hidden" name="form-name" value="quote" />

            <!-- Contact Information -->
            <div>
              <h3 class="text-lg font-semibold mb-4 pb-2 border-b">Contact Information</h3>
              <div class="grid sm:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="label">Full Name *</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="input"
                    placeholder="John Smith"
                  />
                </div>
                <div>
                  <label for="title" class="label">Job Title</label>
                  <input
                    type="text"
                    id="title"
                    name="title"
                    class="input"
                    placeholder="Facility Manager"
                  />
                </div>
              </div>

              <div class="grid sm:grid-cols-2 gap-6 mt-4">
                <div>
                  <label for="company" class="label">Company/Organization *</label>
                  <input
                    type="text"
                    id="company"
                    name="company"
                    required
                    class="input"
                    placeholder="Acme Corporation"
                  />
                </div>
                <div>
                  <label for="industry" class="label">Industry</label>
                  <select id="industry" name="industry" class="input">
                    <option value="">Select your industry...</option>
                    <option value="government">Government / Defense</option>
                    <option value="healthcare">Healthcare</option>
                    <option value="education">Education</option>
                    <option value="corporate">Corporate</option>
                    <option value="hospitality">Hospitality</option>
                    <option value="worship">Houses of Worship</option>
                    <option value="cultural">Cultural / Events</option>
                    <option value="residential">Residential</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <div class="grid sm:grid-cols-2 gap-6 mt-4">
                <div>
                  <label for="email" class="label">Email Address *</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="input"
                    placeholder="john@company.com"
                  />
                </div>
                <div>
                  <label for="phone" class="label">Phone Number *</label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="input"
                    placeholder="(555) 123-4567"
                  />
                </div>
              </div>
            </div>

            <!-- Project Details -->
            <div>
              <h3 class="text-lg font-semibold mb-4 pb-2 border-b">Project Details</h3>

              <div class="mb-4">
                <label for="product-interest" class="label">Product Interest *</label>
                <select id="product-interest" name="product-interest" required class="input">
                  <option value="">Select product category...</option>
                  <option value="directional-speakers">Directional Speakers (PADS™)</option>
                  <option value="pa-systems">PA Systems</option>
                  <option value="audio-distribution">Audio Distribution (CATS™)</option>
                  <option value="source-components">Source Components / Music Servers</option>
                  <option value="healthcare">Healthcare Solutions</option>
                  <option value="custom">Custom Solution / Multiple Products</option>
                  <option value="consultation">Need Help Choosing</option>
                </select>
              </div>

              <div class="mb-4">
                <label for="timeline" class="label">Project Timeline</label>
                <select id="timeline" name="timeline" class="input">
                  <option value="">When do you need this?</option>
                  <option value="urgent">Urgent (within 2 weeks)</option>
                  <option value="1-month">Within 1 month</option>
                  <option value="1-3-months">1-3 months</option>
                  <option value="3-6-months">3-6 months</option>
                  <option value="planning">Just planning / researching</option>
                </select>
              </div>

              <div class="mb-4">
                <label for="quantity" class="label">Estimated Quantity</label>
                <input
                  type="text"
                  id="quantity"
                  name="quantity"
                  class="input"
                  placeholder="e.g., 10 speakers, 1 system, etc."
                />
              </div>

              <div>
                <label for="project-description" class="label">Project Description *</label>
                <textarea
                  id="project-description"
                  name="project-description"
                  rows="6"
                  required
                  class="input resize-none"
                  placeholder="Please describe your project, including:&#10;- What you're trying to accomplish&#10;- Space/venue details (size, environment)&#10;- Any specific requirements or challenges&#10;- Budget range (if applicable)"
                ></textarea>
                <p class="text-sm text-gray-500 mt-2">
                  The more details you provide, the better we can tailor our recommendation.
                </p>
              </div>
            </div>

            <!-- Budget (Optional) -->
            <div>
              <label for="budget" class="label">Budget Range (Optional)</label>
              <select id="budget" name="budget" class="input">
                <option value="">Select budget range...</option>
                <option value="under-5k">Under $5,000</option>
                <option value="5k-10k">$5,000 - $10,000</option>
                <option value="10k-25k">$10,000 - $25,000</option>
                <option value="25k-50k">$25,000 - $50,000</option>
                <option value="50k-plus">$50,000+</option>
                <option value="undisclosed">Prefer not to say</option>
              </select>
              <p class="text-sm text-gray-500 mt-1">
                Helps us recommend the best solution for your budget
              </p>
            </div>

            <!-- Additional Info -->
            <div>
              <label for="additional-info" class="label">Additional Information</label>
              <textarea
                id="additional-info"
                name="additional-info"
                rows="3"
                class="input resize-none"
                placeholder="Any other details you'd like to share..."
              ></textarea>
            </div>

            <!-- Submit -->
            <div class="flex items-center justify-between pt-4 border-t">
              <p class="text-sm text-gray-500">
                * Required fields
              </p>
              <button type="submit" class="btn-primary text-lg px-8">
                Submit Quote Request →
              </button>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 text-sm text-gray-600">
              <p class="flex items-start">
                <svg class="w-5 h-5 text-secondary mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
                <span>
                  We respect your privacy and never share your information. You'll receive a detailed
                  quote via email within 24 business hours. For urgent requests, please call us at
                  <a href="tel:+14087481100" class="text-primary hover:underline font-medium">408-748-1100</a>.
                </span>
              </p>
            </div>
          </form>
        </div>

        <!-- Contact Alternative -->
        <div class="mt-8 text-center">
          <p class="text-gray-600 mb-4">Prefer to discuss your project directly?</p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="tel:+14087481100" class="btn-secondary inline-flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call 408-748-1100
            </a>
            <a href="mailto:sales@pragmatic1.com" class="btn-secondary inline-flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
              Email Sales Team
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
