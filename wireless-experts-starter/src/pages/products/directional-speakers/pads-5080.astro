---
import ProductLayout from '../../../layouts/ProductLayout.astro';

const specifications = {
  'Package Type': 'Complete Whole-Building Audio Distribution',
  'Connectivity': 'Cat5/Cat5e/Cat6 cable (up to 300ft runs)',
  'Rooms Supported': 'Multi-room (expandable)',
  'Control': 'Individual room volume control',
  'Paging': 'Yes - PPT paging system included',
  'Doorbell Integration': 'Yes - PDB doorbell input included',
  'IR Remote': 'Yes - IR detectors and emitters',
  'Components': 'PARI, PH, PM 4.1, PDM, PPT, PDB, PTWI',
  'Made in': 'USA',
};

const features = [
  'Complete whole-building audio distribution system',
  'Paging system (PPT) for announcements throughout the building',
  'Doorbell integration (PDB) - audio alerts through speakers',
  'IR remote control capability inherited from Silver',
  'Individual volume control in each room (PARI in-wall speakers)',
  'Port Hub (PH) for centralized distribution',
  'PM 4.1 and PDM advanced distribution modules',
  'Standard Cat5 cable installation - no special wiring needed',
];

const includedComponents = [
  { name: 'PARI', description: 'In-wall speakers with individual volume control' },
  { name: 'PH', description: 'Port Hub for audio distribution' },
  { name: 'PM 4.1', description: 'Audio processing module' },
  { name: 'PDM', description: 'Distribution module' },
  { name: 'PPT', description: 'Paging system for announcements' },
  { name: 'PDB', description: 'Doorbell input integration' },
  { name: 'PTWI', description: 'In-wall interface' },
];

const relatedProducts = [
  { name: 'PADS Silver Package', href: '/products/directional-speakers/pads-4060', image: '/images/products/directional-speakers/pads-silver.jpg' },
  { name: 'PADS Bronze Package', href: '/products/directional-speakers/pads-3040', image: '/images/products/directional-speakers/pads-bronze.jpg' },
  { name: 'PTS-4077F Tile Speaker', href: '/products/pa-systems/pts-4077f', image: '/images/products/pa-systems/pts-4077f.png' },
];
---

<ProductLayout
  title="PADS™ Gold Package"
  description="Complete whole-building audio distribution system with paging, doorbell integration, IR remote control, and multi-room audio over Cat5 cables. The ultimate PADS™ package."
  category="Audio Distribution"
  badge="Full Featured"
  image="/images/products/directional-speakers/pads-gold.jpg"
  specifications={specifications}
  features={features}
  applications={[
    'Large residential homes - Whole-home audio with paging and doorbell alerts',
    'Small commercial buildings - Background music with announcement capability',
    'Healthcare facilities - Patient room audio with paging integration',
    'Houses of worship - Multi-zone audio with announcement system',
    'Hospitality - Guest rooms and common areas with central control',
    'Corporate offices - Conference rooms and lobbies with paging',
  ]}
  relatedProducts={relatedProducts}
>

  <div slot="additional-info">
    <div class="bg-accent/10 border border-accent/20 rounded-lg p-6 mt-6">
      <h4 class="font-semibold text-accent-dark mb-2">Top-Tier Package</h4>
      <p class="text-gray-600 text-sm">
        The PADS™ Gold Package includes everything from the Silver Package plus paging system,
        doorbell integration, and advanced distribution modules. This is our most complete
        whole-building audio solution.
      </p>
    </div>
  </div>

  <!-- Package Comparison -->
  <section class="section-padding bg-white">
    <div class="container-default">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">What's Included in Gold</h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {includedComponents.map((component) => (
            <div class="bg-gray-50 rounded-lg p-4">
              <h4 class="font-semibold text-primary mb-1">{component.name}</h4>
              <p class="text-sm text-gray-600">{component.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Package Tiers Comparison -->
  <section class="section-padding bg-gray-50">
    <div class="container-default">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Compare PADS™ Packages</h2>

        <div class="overflow-x-auto">
          <table class="w-full border-collapse bg-white rounded-lg overflow-hidden shadow-sm">
            <thead>
              <tr class="bg-gray-100">
                <th class="p-4 text-left font-semibold border-b">Feature</th>
                <th class="p-4 text-center font-semibold border-b">Bronze</th>
                <th class="p-4 text-center font-semibold border-b">Silver</th>
                <th class="p-4 text-center font-semibold border-b bg-accent/10">Gold</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="p-4 border-b">Multi-Room Audio</td>
                <td class="p-4 text-center border-b text-green-600">✓</td>
                <td class="p-4 text-center border-b text-green-600">✓</td>
                <td class="p-4 text-center border-b bg-accent/5 text-green-600">✓</td>
              </tr>
              <tr>
                <td class="p-4 border-b">In-Wall Speakers (PARI)</td>
                <td class="p-4 text-center border-b text-green-600">✓</td>
                <td class="p-4 text-center border-b text-green-600">✓</td>
                <td class="p-4 text-center border-b bg-accent/5 text-green-600">✓</td>
              </tr>
              <tr>
                <td class="p-4 border-b">Cat5 Distribution</td>
                <td class="p-4 text-center border-b text-green-600">✓</td>
                <td class="p-4 text-center border-b text-green-600">✓</td>
                <td class="p-4 text-center border-b bg-accent/5 text-green-600">✓</td>
              </tr>
              <tr>
                <td class="p-4 border-b">IR Remote Control</td>
                <td class="p-4 text-center border-b text-gray-400">—</td>
                <td class="p-4 text-center border-b text-green-600">✓</td>
                <td class="p-4 text-center border-b bg-accent/5 text-green-600">✓</td>
              </tr>
              <tr>
                <td class="p-4 border-b">Paging System (PPT)</td>
                <td class="p-4 text-center border-b text-gray-400">—</td>
                <td class="p-4 text-center border-b text-gray-400">—</td>
                <td class="p-4 text-center border-b bg-accent/5 text-green-600">✓</td>
              </tr>
              <tr>
                <td class="p-4 border-b">Doorbell Integration (PDB)</td>
                <td class="p-4 text-center border-b text-gray-400">—</td>
                <td class="p-4 text-center border-b text-gray-400">—</td>
                <td class="p-4 text-center border-b bg-accent/5 text-green-600">✓</td>
              </tr>
              <tr>
                <td class="p-4">Advanced Modules (PM/PDM)</td>
                <td class="p-4 text-center text-gray-400">—</td>
                <td class="p-4 text-center text-gray-400">—</td>
                <td class="p-4 text-center bg-accent/5 text-green-600">✓</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</ProductLayout>
