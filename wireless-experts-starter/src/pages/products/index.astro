---
import BaseLayout from '../../layouts/BaseLayout.astro';

const productCategories = [
  {
    name: 'PADS™ Audio Systems',
    slug: 'directional-speakers',
    description: 'PADS™ whole-building audio distribution over Cat5 cables, plus focused tile-array speakers for defined audio zones.',
    image: '/images/products/directional-speakers/pads-gold.jpg',
    badge: 'PADS™ Technology',
    products: ['PADS Gold/Silver/Bronze Packages', 'PTS-4077F Tile Speaker'],
  },
  {
    name: 'Amplifiers',
    slug: 'amplifiers',
    description: 'Professional audio amplifiers from compact HideAway™ series to high-power rack-mount SAA series.',
    image: '/images/products/pa-systems/pts-4077f.png',
    badge: 'HideAway™ & SAA',
    products: ['MBA-120/124/136/148', 'SAA-212/224/236/248'],
  },
  {
    name: 'Security Cameras',
    slug: 'cameras',
    description: 'Professional video surveillance with Cat5 connectivity. Covert in-wall cameras and wireless video systems.',
    image: '/images/products/cameras/domecam.png',
    badge: 'Pragmatic Video',
    products: ['DomeCam™', 'IWC™ In-Wall Camera', 'HazCam™ Wireless'],
  },
  {
    name: 'PHA Line Array Speakers',
    slug: 'speakers',
    description: 'Pragmatic High-Performance Arrays with Defined Acoustical Coverage for venues of all sizes.',
    image: '/images/products/speakers/pha-25.png',
    badge: 'DAC Technology',
    products: ['PHA-4/8/16/25', 'PHA-264', 'PHA-5125'],
  },
  {
    name: 'CATS™ Distribution',
    slug: 'audio-distribution',
    description: 'Distribute high-quality audio and video over standard Cat5 cables up to 300ft with CATS™ technology.',
    image: '/images/products/audio-distribution/cats-mx4.png',
    badge: 'CATS™ Technology',
    products: ['CATS-HDMI-MX4/MX8', 'Port Hubs', 'VGA Distribution'],
  },
  {
    name: 'Source Components',
    slug: 'source-components',
    description: 'Music servers, media players, and professional displays for commercial AV installations.',
    image: '/images/carousel/pim-21b.png',
    badge: 'Digital Media',
    products: ['MuSe™ Music Server', 'PIM-21B Medical Display', 'DMS Media Systems'],
  },
  {
    name: 'Healthcare Solutions',
    slug: 'healthcare',
    description: 'Patient entertainment systems and clinical audio solutions designed for medical environments.',
    image: '/images/products/healthcare/hc-24.png',
    badge: 'Patient-Focused',
    products: ['PHLCD TVs', 'Patient Entertainment', 'Medical Displays'],
  },
];
---

<BaseLayout 
  title="Products" 
  description="Professional audio and video solutions from Pragmatic Communications. Directional speakers, PA systems, audio distribution, and healthcare entertainment."
>
  <!-- Hero -->
  <section class="bg-primary text-white py-16">
    <div class="container-default">
      <h1 class="text-4xl font-bold mb-4">Our Products</h1>
      <p class="text-xl text-gray-200 max-w-3xl">
        Precision-engineered audio and video solutions designed for the most demanding 
        professional environments. All products are manufactured in the USA.
      </p>
    </div>
  </section>

  <!-- Product Categories -->
  <section class="section-padding">
    <div class="container-default">
      <div class="space-y-12">
        {productCategories.map((category, index) => (
          <div class={`grid lg:grid-cols-2 gap-8 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
              <span class="badge badge-primary mb-3">{category.badge}</span>
              <h2 class="text-3xl font-bold mb-4">{category.name}</h2>
              <p class="text-gray-600 text-lg mb-6">
                {category.description}
              </p>
              <div class="mb-6">
                <h4 class="font-semibold text-gray-700 mb-2">Products in this category:</h4>
                <ul class="text-gray-600 space-y-1">
                  {category.products.map((product) => (
                    <li class="flex items-center">
                      <svg class="w-4 h-4 text-secondary mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      {product}
                    </li>
                  ))}
                </ul>
              </div>
              <a href={`/products/${category.slug}`} class="btn-primary">
                View {category.name} →
              </a>
            </div>
            <div class={`bg-gray-100 rounded-2xl overflow-hidden ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
              <img src={category.image} alt={category.name} class="w-full h-full object-contain p-8" />
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-gray-50 section-padding">
    <div class="container-default">
      <div class="bg-white rounded-2xl p-8 md:p-12 shadow-lg border border-gray-100">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold mb-4">
              Not sure which product is right for you?
            </h2>
            <p class="text-gray-600 text-lg">
              Our team can help you find the perfect solution for your specific requirements. 
              Tell us about your project and we'll recommend the best products.
            </p>
          </div>
          <div class="text-center md:text-right">
            <a href="/quote" class="btn-primary">
              Request a Consultation
            </a>
            <p class="mt-4 text-gray-500 text-sm">
              Or call us: <a href="tel:+14087481100" class="text-primary hover:underline">408-748-1100</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Schema Markup -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": "Pragmatic Communications Products",
      "description": "Professional audio and video solutions for commercial and industrial applications",
      "numberOfItems": 7,
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "item": {
            "@type": "Product",
            "name": "PADS Audio Systems",
            "description": "Whole-building audio distribution over Cat5 cables",
            "brand": "Pragmatic"
          }
        },
        {
          "@type": "ListItem",
          "position": 2,
          "item": {
            "@type": "Product",
            "name": "Amplifiers",
            "description": "HideAway compact and SAA rack-mount professional amplifiers",
            "brand": "Pragmatic"
          }
        },
        {
          "@type": "ListItem",
          "position": 3,
          "item": {
            "@type": "Product",
            "name": "Security Cameras",
            "description": "Professional video surveillance with Cat5 connectivity",
            "brand": "Pragmatic"
          }
        },
        {
          "@type": "ListItem",
          "position": 4,
          "item": {
            "@type": "Product",
            "name": "CATS Distribution",
            "description": "CATS technology for audio over Cat5 cables",
            "brand": "Pragmatic"
          }
        },
        {
          "@type": "ListItem",
          "position": 5,
          "item": {
            "@type": "Product",
            "name": "Source Components",
            "description": "Digital tuners, music servers, and media players",
            "brand": "Pragmatic"
          }
        },
        {
          "@type": "ListItem",
          "position": 6,
          "item": {
            "@type": "Product",
            "name": "Healthcare Solutions",
            "description": "Patient entertainment and clinical audio systems",
            "brand": "Pragmatic"
          }
        }
      ]
    }
  </script>
</BaseLayout>
