---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const catsHdmiProducts = [
  {
    model: 'CATS-HDMI-MX4',
    name: '4x4 HDMI Matrix',
    description: 'Route 4 HDMI sources to 4 displays over Cat5e/Cat6 cables with IR pass-through control.',
    inputs: '4 HDMI',
    outputs: '4 displays',
    range: '115ft (Cat5e) / 130ft (Cat6) at 1080p',
    video: '480i to 1080p60, 36-bit color',
    audio: '7.1 channel digital',
    hdmi: 'HDMI 1.3',
    dimensions: '4.3" x 13" x 1.7"',
    weight: '2.7 lbs',
    control: 'Push button, IR remote, RS-232',
    includes: '4x CATS-HDMI-RX4 receivers',
  },
  {
    model: 'CATS-HDMI-MX8',
    name: '8x8 HDMI Matrix',
    description: 'Route 8 HDMI sources to 8 displays over Cat5e/Cat6 cables with IR pass-through control.',
    inputs: '8 HDMI',
    outputs: '8 displays',
    range: '115ft (Cat5e) / 130ft (Cat6) at 1080p',
    video: '480i to 1080p60',
    audio: '7.1 channel digital',
    hdmi: 'HDMI 1.2a / 1.3c',
    dimensions: '17.3" x 11.4" x 1.7"',
    weight: '7.2 lbs',
    control: 'Push button, IR remote, RS-232',
    includes: '8x CATS-HDMI-RX8 receivers',
  },
];

const padsHubs = [
  {
    model: 'PH4',
    name: '4-Port PADS Active Hub',
    description: 'Compact 4-port hub for PADS audio distribution systems. Distributes audio to up to 4 zones.',
    ports: 4,
    range: '300ft per run',
    frequency: '20Hz - 20kHz',
    snr: '>100dB',
    dynamicRange: '>100dB',
    distortion: '<0.01% THD',
    dimensions: '2.75" x 6" x 1"',
    weight: '3.9 oz',
  },
  {
    model: 'PH16',
    name: '16-Port PADS Active Hub',
    description: 'High-capacity 16-port hub for large PADS audio distribution installations.',
    ports: 16,
    range: '300ft per run',
    frequency: '20Hz - 20kHz',
    snr: '>100dB',
    dynamicRange: '>100dB',
    distortion: '<0.01% THD',
    dimensions: '4.5" x 7.75" x 1"',
    weight: '13.8 oz',
  },
];
---

<BaseLayout
  title="Audio & Video Distribution"
  description="CATS HDMI matrix systems and PADS audio distribution hubs for commercial AV installations."
>
  <!-- Hero -->
  <section class="bg-primary text-white py-20">
    <div class="container-default">
      <span class="badge bg-white/20 text-white mb-4">CATS Technology</span>
      <h1 class="text-5xl font-bold mb-6">Audio & Video Distribution</h1>
      <p class="text-xl text-gray-200 max-w-3xl">
        Professional A/V distribution systems using standard Cat5/Cat6 cables.
        CATS HDMI matrices for video and PADS hubs for whole-building audio.
      </p>
    </div>
  </section>

  <!-- CATS HDMI Matrix Systems -->
  <section class="section-padding">
    <div class="container-default">
      <div class="text-center mb-12">
        <span class="badge badge-primary mb-3">HDMI Distribution</span>
        <h2 class="text-3xl font-bold mb-4">CATS HDMI Matrix Systems</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Route multiple HDMI sources to multiple displays over standard Cat5e/Cat6 cables
          with full 1080p support and 7.1 channel audio.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8 mb-12">
        {catsHdmiProducts.map((product) => (
          <div class="bg-white border border-gray-200 rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
            <div class="bg-gray-100 p-6">
              <img
                src={`/images/products/audio-distribution/cats-${product.model === 'CATS-HDMI-MX4' ? 'mx4' : 'mx8'}.png`}
                alt={product.model}
                class="w-full h-48 object-contain"
              />
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-2">{product.model}</h3>
              <p class="text-secondary font-medium mb-3">{product.name}</p>
              <p class="text-gray-600 mb-4">{product.description}</p>

              <div class="grid grid-cols-2 gap-3 text-sm mb-4">
                <div>
                  <span class="text-gray-500">Inputs:</span>
                  <span class="font-medium ml-1">{product.inputs}</span>
                </div>
                <div>
                  <span class="text-gray-500">Outputs:</span>
                  <span class="font-medium ml-1">{product.outputs}</span>
                </div>
                <div class="col-span-2">
                  <span class="text-gray-500">Range:</span>
                  <span class="font-medium ml-1">{product.range}</span>
                </div>
                <div>
                  <span class="text-gray-500">Video:</span>
                  <span class="font-medium ml-1">{product.video}</span>
                </div>
                <div>
                  <span class="text-gray-500">Audio:</span>
                  <span class="font-medium ml-1">{product.audio}</span>
                </div>
              </div>

              <details class="border-t border-gray-100 pt-4">
                <summary class="cursor-pointer text-primary font-medium hover:text-primary-light">
                  View Full Specifications
                </summary>
                <div class="mt-4 space-y-2 text-sm">
                  <div class="flex justify-between py-1 border-b border-gray-50">
                    <span class="text-gray-500">HDMI Compliance</span>
                    <span class="font-medium">{product.hdmi}</span>
                  </div>
                  <div class="flex justify-between py-1 border-b border-gray-50">
                    <span class="text-gray-500">Dimensions</span>
                    <span class="font-medium">{product.dimensions}</span>
                  </div>
                  <div class="flex justify-between py-1 border-b border-gray-50">
                    <span class="text-gray-500">Weight</span>
                    <span class="font-medium">{product.weight}</span>
                  </div>
                  <div class="flex justify-between py-1 border-b border-gray-50">
                    <span class="text-gray-500">Control</span>
                    <span class="font-medium">{product.control}</span>
                  </div>
                  <div class="flex justify-between py-1">
                    <span class="text-gray-500">Includes</span>
                    <span class="font-medium">{product.includes}</span>
                  </div>
                </div>
              </details>
            </div>
          </div>
        ))}
      </div>

      <!-- CATS Features -->
      <div class="bg-gray-50 rounded-2xl p-8 mb-16">
        <h3 class="text-xl font-bold mb-6 text-center">CATS HDMI Features</h3>
        <div class="grid md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h4 class="font-semibold mb-1">Full HD 1080p</h4>
            <p class="text-sm text-gray-600">Up to 1080p60 with 36-bit color depth</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15.536a5 5 0 001.414 1.414m2.828-9.9a9 9 0 0112.728 0" />
              </svg>
            </div>
            <h4 class="font-semibold mb-1">7.1 Surround</h4>
            <p class="text-sm text-gray-600">Multi-channel digital audio support</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h4 class="font-semibold mb-1">IR Pass-Through</h4>
            <p class="text-sm text-gray-600">Control sources from any display location</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h4 class="font-semibold mb-1">Cost Efficient</h4>
            <p class="text-sm text-gray-600">Uses standard Cat5e/Cat6 cabling</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- PADS Audio Hubs -->
  <section class="bg-gray-50 section-padding">
    <div class="container-default">
      <div class="text-center mb-12">
        <span class="badge badge-secondary mb-3">PADS Audio Distribution</span>
        <h2 class="text-3xl font-bold mb-4">PADS Active Hubs</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          High-fidelity audio distribution hubs for PADS systems. Distribute audio to multiple
          zones with audiophile-grade specifications.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto mb-12">
        {padsHubs.map((hub) => (
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-shadow">
            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="text-2xl font-bold">{hub.model}</h3>
                <p class="text-secondary font-medium">{hub.name}</p>
              </div>
              <span class="bg-primary/10 text-primary font-bold px-3 py-1 rounded-full text-sm">
                {hub.ports} Ports
              </span>
            </div>
            <p class="text-gray-600 mb-6">{hub.description}</p>

            <div class="space-y-3">
              <div class="flex justify-between py-2 border-b border-gray-100">
                <span class="text-gray-500">Cable Range</span>
                <span class="font-medium">{hub.range}</span>
              </div>
              <div class="flex justify-between py-2 border-b border-gray-100">
                <span class="text-gray-500">Frequency Response</span>
                <span class="font-medium">{hub.frequency}</span>
              </div>
              <div class="flex justify-between py-2 border-b border-gray-100">
                <span class="text-gray-500">Signal-to-Noise</span>
                <span class="font-medium">{hub.snr}</span>
              </div>
              <div class="flex justify-between py-2 border-b border-gray-100">
                <span class="text-gray-500">Dynamic Range</span>
                <span class="font-medium">{hub.dynamicRange}</span>
              </div>
              <div class="flex justify-between py-2 border-b border-gray-100">
                <span class="text-gray-500">THD</span>
                <span class="font-medium">{hub.distortion}</span>
              </div>
              <div class="flex justify-between py-2 border-b border-gray-100">
                <span class="text-gray-500">Dimensions</span>
                <span class="font-medium">{hub.dimensions}</span>
              </div>
              <div class="flex justify-between py-2">
                <span class="text-gray-500">Weight</span>
                <span class="font-medium">{hub.weight}</span>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- PADS System Benefits -->
      <div class="bg-white rounded-2xl p-8">
        <h3 class="text-xl font-bold mb-6 text-center">Why PADS Audio Distribution?</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="flex items-start">
            <div class="w-10 h-10 bg-secondary/10 rounded-lg flex items-center justify-center flex-shrink-0 mr-4">
              <svg class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
              </svg>
            </div>
            <div>
              <h4 class="font-semibold mb-1">Audiophile Quality</h4>
              <p class="text-sm text-gray-600">>100dB SNR and dynamic range with virtually no distortion</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="w-10 h-10 bg-secondary/10 rounded-lg flex items-center justify-center flex-shrink-0 mr-4">
              <svg class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
              </svg>
            </div>
            <div>
              <h4 class="font-semibold mb-1">Scalable Design</h4>
              <p class="text-sm text-gray-600">Start with 4 zones, expand to 16+ with additional hubs</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="w-10 h-10 bg-secondary/10 rounded-lg flex items-center justify-center flex-shrink-0 mr-4">
              <svg class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <div>
              <h4 class="font-semibold mb-1">Easy Installation</h4>
              <p class="text-sm text-gray-600">Standard Cat5 cables, 300ft runs, compact form factor</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Applications -->
  <section class="section-padding">
    <div class="container-default">
      <h2 class="text-3xl font-bold text-center mb-12">Applications</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-gray-50 rounded-xl p-6">
          <h3 class="font-semibold mb-2">Commercial Buildings</h3>
          <p class="text-gray-600 text-sm">Distribute digital signage, presentations, and background music throughout offices and retail spaces.</p>
        </div>
        <div class="bg-gray-50 rounded-xl p-6">
          <h3 class="font-semibold mb-2">Healthcare Facilities</h3>
          <p class="text-gray-600 text-sm">Patient room entertainment, waiting area displays, and facility-wide audio announcements.</p>
        </div>
        <div class="bg-gray-50 rounded-xl p-6">
          <h3 class="font-semibold mb-2">Hospitality</h3>
          <p class="text-gray-600 text-sm">Hotel lobby displays, conference rooms, restaurant background music, and event spaces.</p>
        </div>
        <div class="bg-gray-50 rounded-xl p-6">
          <h3 class="font-semibold mb-2">Education</h3>
          <p class="text-gray-600 text-sm">Classroom A/V distribution, campus-wide announcements, and digital bulletin boards.</p>
        </div>
        <div class="bg-gray-50 rounded-xl p-6">
          <h3 class="font-semibold mb-2">Houses of Worship</h3>
          <p class="text-gray-600 text-sm">Sanctuary video distribution, overflow rooms, and multi-zone audio for large campuses.</p>
        </div>
        <div class="bg-gray-50 rounded-xl p-6">
          <h3 class="font-semibold mb-2">Sports & Entertainment</h3>
          <p class="text-gray-600 text-sm">Stadium displays, luxury suites, concourse video walls, and distributed audio systems.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-primary text-white section-padding">
    <div class="container-default text-center">
      <h2 class="text-3xl font-bold mb-4">Need Help Designing Your Distribution System?</h2>
      <p class="text-gray-200 text-lg mb-8 max-w-2xl mx-auto">
        Our team can help you design a complete A/V distribution solution tailored to your
        facility's requirements.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/quote" class="btn-white">Request a Quote</a>
        <a href="/support/downloads" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white/10 transition-colors">
          Download Datasheets
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
