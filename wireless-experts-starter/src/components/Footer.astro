---
const currentYear = new Date().getFullYear();

const footerLinks = {
  products: [
    { name: 'Directional Speakers', href: '/products/directional-speakers' },
    { name: 'PA Systems', href: '/products/pa-systems' },
    { name: 'Audio Distribution', href: '/products/audio-distribution' },
    { name: 'Healthcare Solutions', href: '/products/healthcare' },
  ],
  industries: [
    { name: 'Government', href: '/industries/government' },
    { name: 'Healthcare', href: '/industries/healthcare' },
    { name: 'Education', href: '/industries/education' },
    { name: 'Corporate', href: '/industries/corporate' },
  ],
  company: [
    { name: 'About Us', href: '/about' },
    { name: 'Case Studies', href: '/case-studies' },
    { name: 'Contact', href: '/contact' },
    { name: 'Support', href: '/support' },
    { name: 'Downloads', href: '/support/downloads' },
  ],
};
---

<footer class="bg-primary text-white">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-4">
          <img
            src="/images/logo.png"
            alt="Pragmatic Communications"
            class="h-12 w-auto brightness-0 invert"
          />
        </a>
        <p class="text-gray-300 mb-4 max-w-sm">
          Silicon Valley manufacturer of professional audio/video solutions since 1994. 
          NASA technology partner. Made in USA.
        </p>
        <div class="flex space-x-4 mb-6">
          <span class="text-xs bg-white/10 px-3 py-1 rounded-full">30+ Years</span>
          <span class="text-xs bg-white/10 px-3 py-1 rounded-full">NASA Partner</span>
          <span class="text-xs bg-white/10 px-3 py-1 rounded-full">ISO 9001</span>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-2 text-sm text-gray-300">
          <p class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            2340A Walsh Avenue, Santa Clara, CA 95051
          </p>
          <p class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+14087481100" class="hover:text-white transition-colors">408-748-1100</a>
          </p>
          <p class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:sales@pragmatic1.com" class="hover:text-white transition-colors">sales@pragmatic1.com</a>
          </p>
        </div>

        <!-- Social Links -->
        <div class="flex space-x-4 mt-6">
          <a href="https://www.linkedin.com/company/pragmatic-communications" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-lg flex items-center justify-center transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="https://www.youtube.com/@pragmaticcommunications" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-lg flex items-center justify-center transition-colors" aria-label="YouTube">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
          <a href="https://twitter.com/pragmaticcomms" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-lg flex items-center justify-center transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Products Links -->
      <div>
        <h4 class="font-semibold mb-4">Products</h4>
        <ul class="space-y-2">
          {footerLinks.products.map((link) => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Industries Links -->
      <div>
        <h4 class="font-semibold mb-4">Industries</h4>
        <ul class="space-y-2">
          {footerLinks.industries.map((link) => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company Links -->
      <div>
        <h4 class="font-semibold mb-4">Company</h4>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
        
        <!-- CTA -->
        <div class="mt-6">
          <a href="/quote" class="inline-flex items-center px-4 py-2 bg-accent hover:bg-accent-light text-white text-sm font-semibold rounded-lg transition-colors">
            Get a Quote
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-white/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
        <p>Â© {currentYear} Pragmatic Communications Systems, Inc. All rights reserved.</p>
        <div class="flex items-center gap-4 mt-2 md:mt-0">
          <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
          <span>|</span>
          <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
          <span>|</span>
          <span>Made in Silicon Valley, USA</span>
        </div>
      </div>
    </div>
  </div>
</footer>
